@model List<Store_Sys.Models.OutFiles>

<style>
    .PrimaryBtn {
        background-color: rgb(15, 103, 177) !important;
        color: white; /* لون النص */
        border: none; /* إخفاء الإطار */
        padding: 10px 20px; /* ضبط الحشوة */
        text-align: center; /* محاذاة النص في الوسط */
        text-decoration: none; /* إزالة التسطير عن النص */
        display: inline-block; /* عرض الزر كعنصر سطري */
        font-size: 16px; /* حجم النص */
        margin: 4px 2px; /* الهوامش */
        cursor: pointer; /* تغيير شكل المؤشر عند التحويم */
        border-radius: 4px; /* تقويس الزوايا */
    }

    .PrimaryBtn:hover {
        color: white !important;
    }

    /* From Uiverse.io by alexmaracinaru */
    .cta {
    position: relative;
    margin: auto;
    padding: 12px 18px;
    transition: all 0.2s ease;
    border: none;
    background: none;
    cursor: pointer;
    }

    .cta:before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    display: block;
    border-radius: 50px;
    background: #b1dae7;
    width: 45px;
    height: 45px;
    transition: all 0.3s ease;
    }

    .cta span {
    position: relative;
    font-family: "Ubuntu", sans-serif;
    font-size: 18px;
    font-weight: 700;
    letter-spacing: 0.05em;
    color: #234567;
    }

    .cta svg {
    position: relative;
    top: 0;
    margin-left: 10px;
    fill: none;
    stroke-linecap: round;
    stroke-linejoin: round;
    stroke: #234567;
    stroke-width: 2;
    transform: translateX(-5px);
    transition: all 0.3s ease;
    }

    .cta:hover:before {
    width: 100%;
    background: #b1dae7;
    }

    .cta:hover svg {
    transform: translateX(0);
    }

    .cta:active {
    transform: scale(0.95);
    }

</style>
<style>
    .btn-refresh {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 40px; /* تصغير الحجم */
        height: 40px; /* تصغير الحجم */
        background-color: #B0B0B0; /* لون رمادي فاتح */
        color: white;
        border-radius: 50%; /* الشكل الدائري */
        font-size: 18px; /* حجم الأيقونة */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* تأثير ظل خفيف */
        transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease;
    }

        .btn-refresh:hover {
            transform: scale(1.1); /* تكبير الزر عند التحويم */
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2); /* زيادة الظل عند التحويم */
            background-color: #004D73; /* لون كحلي عند التحويم */
        }

        .btn-refresh i {
            transition: transform 0.3s ease;
        }

        .btn-refresh:hover i {
            transform: rotate(360deg); /* إضافة حركة دوران للأيقونة عند التحويم */
        }
</style>
<div class="mt-5">
    <div id="personal-info" class="shadow">
        <span class="bg-color"> بيانات مخرجات المستندات </span>
        <p>
            هذه الصفحة تعرض بيانات كل الجلسات  الخاصة  بمخرجات المستندات
        </p>

    </div>

    <div id="personal-info" class="shadow">
        <div class="row my-3">
            <div class="col-sm-12 col-md-6 col-lg-2">
                <a href="@Url.Action("AddFile","OutFiles")">
                    <button class="cta">
                        <span>إضافة مستند</span>
                        <svg width="15px" height="15px" viewBox="0 0 20 20">
                            <line x1="10" y1="3" x2="10" y2="17" stroke="black" stroke-width="2"></line>
