                        </a>
                    </div>
				</div>
            </form>
            <table class="table table-hover">
                <thead>
                    <tr>
@*                         <th scope="col">#</th>
 *@                        <th scope="col">رقم المستند</th>
                        <th scope="col">تاريخ المستند</th>
                        <th scope="col">رقم الطلب</th>
                        <th scope="col">رقم الموافقة</th>
                        <th scope="col">اسم الشخص</th>
                        <th scope="col">اسم القسم</th>
                        <th scope="col">تعديل</th>
                        <th scope="col">  حذف   </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var file in Model)
                    {
                        <tr>
@*                             <td>@counter</td> *@ 
                            <td>@file.DocumentNum</td>
                            <td>@(file.Documentdate?.ToString("MM/dd/yyyy"))</td>
                            <td>@file.OrderNum</td>
                            <td>@file.ApprovalNum</td>
                            <td>@file.Person?.Name</td>
                            <td>@file.Department?.Name</td>
                            <td>
                                <a href="@Url.Action("EditFile", "OutFiles", new { id = file.Id })" class="btn text-dark">
                                    <img src="/images/edit.png" alt="تعديل" style="width: 30px; height: 30px;">
                                </a>
                            </td>
                            <td>
                                <form method="post" action="@Url.Action("DeleteFile", "OutFiles")" class="d-inline">
                                    <input type="hidden" name="id" value="@file.Id" />
                                    <button type="button" class="btn text-dark delete-material"
                                            style="border:none; background:transparent;"
                                            data-id="@file.Id">
                                        <img src="/images/trash.png" alt="حذف" style="width:30px;height:30px;">
                                    </button>
                                </form>
                            </td>

                        </tr>
                        counter++;
                    }
                </tbody>
            </table>
            <!-- عرض رسالة إذا لم تكن هناك نتائج -->
            @if (ViewData["NoResultsMessage"] != null)
            {
                <div class="alert alert-warning mt-3" role="alert">
                    @ViewData["NoResultsMessage"]
                </div>
            }
        </div>

    </div>

</div>
