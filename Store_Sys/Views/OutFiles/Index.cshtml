        @{
            var counter = 1;
        }
        <div class="row">
            <form id="searchForm">
                <div class="row my-3">


                    <!-- بحث برقم المستند -->
                    <div class="col-sm-12 col-md-4 col-lg-3 col-xl-2 mt-2">
                        <label for="searchDocumentNum" class="mb-2">بحث برقم المستند</label>
                        <input type="text" id="searchDocumentNum" name="searchDocumentNum" class="form-control" placeholder="بحث برقم المستند" value="@Context.Request.Query["searchDocumentNum"]">
                    </div>

                    <!-- بحث برقم الطلب -->
                    <div class="col-sm-12 col-md-4 col-lg-3 col-xl-2 mt-2">
                        <label for="searchOrderNum" class="mb-2">بحث برقم الطلب</label>
                        <input type="text" id="searchOrderNum" name="searchOrderNum" class="form-control" placeholder="بحث برقم الطلب" value="@Context.Request.Query["searchOrderNum"]">
                    </div>

                    <!-- بحث برقم الموافقة -->
                    <div class="col-sm-12 col-md-4 col-lg-3 col-xl-2 mt-2">
                        <label for="searchApprovalNum" class="mb-2">بحث برقم الموافقة</label>
                        <input type="text" id="searchApprovalNum" name="searchApprovalNum" class="form-control" placeholder="بحث برقم الموافقة" value="@Context.Request.Query["searchApprovalNum"]">
                    </div>

                    <!-- تاريخ من -->
                    <div class="col-sm-12 col-md-4 col-lg-3 col-xl-2 mt-2">
                        <label for="startDate" class="mb-2">تاريخ من</label>
                        <input type="date" id="startDate" name="startDate" class="form-control" value="@Context.Request.Query["startDate"]">
                    </div>

                    <!-- تاريخ إلى -->
                    <div class="col-sm-12 col-md-4 col-lg-3 col-xl-2 mt-2">
                        <label for="endDate" class="mb-2">تاريخ إلى</label>
                        <input type="date" id="endDate" name="endDate" class="form-control" value="@Context.Request.Query["endDate"]">
                    </div>
                    <!-- بحث باسم الشخص -->
                    <div class="col-sm-12 col-md-4 col-lg-3 col-xl-2 mt-2">
                        <label for="searchPerson" class="mb-2">بحث بشخص</label>
                        <select id="searchPerson" name="searchPerson" class="form-control">
                            <option value="">اختر الشخص</option>
                            @foreach (var person in ViewBag.Persons)
                            {
                                <option value="@person.Id" selected="@(person.Id.ToString() == Context.Request.Query["searchPerson"])">@person.Name</option>
                            }
                        </select>
                    </div>

                    <!-- بحث بالقسم -->
                    <div class="col-sm-12 col-md-4 col-lg-3 col-xl-2 mt-2">
                        <label for="searchDepartment" class="mb-2">بحث بقسم</label>
                        <select id="searchDepartment" name="searchDepartment" class="form-control">
                            <option value="">اختر القسم</option>
                            @foreach (var department in ViewBag.Departments)
                            {
                                <option value="@department.Id" selected="@(department.Id.ToString() == Context.Request.Query["searchDepartment"])">@department.Name</option>

                            }
                        </select>
                    </div>

                    <!-- زر البحث -->
                    <div class="col-sm-12 col-md-4 col-lg-3 col-xl-2 mt-2">
                        <button type="submit" style="color: white;" class="btn PrimaryBtn mt-4 w-100">بحث</button>

                    </div>

                    <!-- زر إعادة تحميل البيانات بدون فلترة -->
                    <div class="col-sm-12 col-md-4 col-lg-3 col-xl-2 mt-2 d-flex justify-content-center align-items-center">
                        <a href="@Url.Action("Index", "OutFiles")" class="btn btn-refresh" style="width: 40px; height: 40px; display: flex; justify-content: center; align-items: center; font-size: 18px; border-radius: 5px;">
