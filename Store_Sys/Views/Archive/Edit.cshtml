@model Store_Sys.Models.Archive
﻿

<div id="personal-info" class="shadow my-5">
    <span class="bg-color">  تعديل مستند </span>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        
        <div class="row">
            <div class="col-sm-12 col-md-3 mt-3">
                <label class="form-label">رقم المستند</label>
                <input asp-for="DocumentNum" class="form-control" placeholder="أدخل رقم المستند" />
                <span asp-validation-for="DocumentNum" class="text-danger"></span>
            </div>

            <div class="col-sm-12 col-md-3 mt-3">
                <label class="form-label">تاريخ المستند</label>
                <input asp-for="Documentdate" class="form-control" type="date" />
                <span asp-validation-for="Documentdate" class="text-danger"></span>
            </div>

            <div class="col-sm-12 col-md-3 mt-3">
                <label class="form-label">نوع العملية</label>
                <select asp-for="TypeOfOperationId" class="form-select" asp-items="@(new SelectList(ViewBag.Operations, "Id", "Name"))">
                    <option value="">اختر نوع العملية</option>
                </select>
                <span asp-validation-for="TypeOfOperationId" class="text-danger"></span>
            </div>

            <div class="col-sm-12 col-md-3 mt-3">
                <label class="form-label">رفع ملف</label>
                <input type="file" name="FilePath" class="form-control" />
            </div>
        </div>

        <div class="col-sm-12 mt-4">
            <input type="submit" class="form-control color-btn" value="حفظ" />
        </div>
    </form>
</div>