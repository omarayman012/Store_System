@model IEnumerable<Store_Sys.Models.Archive>
    
<style>
    .PrimaryBtn {
        background-color: rgb(15, 103, 177) !important;
        color: white; /* لون النص */
        border: none; /* إخفاء الإطار */
        padding: 10px 20px; /* ضبط الحشوة */
        text-align: center; /* محاذاة النص في الوسط */
        text-decoration: none; /* إزالة التسطير عن النص */
        display: inline-block; /* عرض الزر كعنصر سطري */
        font-size: 16px; /* حجم النص */
        margin: 4px 2px; /* الهوامش */
        cursor: pointer; /* تغيير شكل المؤشر عند التحويم */
        border-radius: 4px; /* تقويس الزوايا */
    }

        .PrimaryBtn:hover {
            color: white !important;
        }
    /* From Uiverse.io by alexmaracinaru */
    .cta {
        position: relative;
        margin: auto;
        padding: 12px 18px;
        transition: all 0.2s ease;
        border: none;
        background: none;
        cursor: pointer;
    }

        .cta:before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            display: block;
            border-radius: 50px;
            background: #b1dae7;
            width: 45px;
            height: 45px;
            transition: all 0.3s ease;
        }

        .cta span {
            position: relative;
            font-family: "Ubuntu", sans-serif;
            font-size: 18px;
            font-weight: 700;
            letter-spacing: 0.05em;
            color: #234567;
        }

        .cta svg {
            position: relative;
            top: 0;
            margin-left: 10px;
            fill: none;
            stroke-linecap: round;
            stroke-linejoin: round;
            stroke: #234567;
            stroke-width: 2;
            transform: translateX(-5px);
            transition: all 0.3s ease;
        }

        .cta:hover:before {
            width: 100%;
            background: #b1dae7;
        }

        .cta:hover svg {
            transform: translateX(0);
        }

        .cta:active {
            transform: scale(0.95);
        }

</style>

<style>
    .custom-btn {
        font-size: 0.85rem; /* نص أصغر نسبياً */
        padding: 8px 16px;
        border: none;
        color: white;
        border-radius: 8px;
        transition: all 0.3s ease-in-out;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .btn-fasl {
        background: linear-gradient(45deg, #1e90ff, #00bfff); /* تدرج أزرق */
    }

    .btn-shuhada {
        background: linear-gradient(45deg, #28a745, #a2d729); /* تدرج أخضر */
    }

    .custom-btn:hover {
        transform: scale(1.05);
        opacity: 0.9;
    }

    .show-file-hover {
        position: relative; /* يسمح بوضع التلميح داخل العنصر */
    }

        /* السهم + النص (يُنشَأ باستخدام pseudo-element) */
        .show-file-hover::after {
            content: "⬈  إظهار الملف"; /* السهم + النص */
            font-size: 0.8rem;
            background: #333;
            color: #fff;
            padding: 4px 8px;
            border-radius: 4px;
            white-space: nowrap;
            /* موضعه فوق العنصر */
            position: absolute;
            bottom: 100%; /* فوق العنصر مباشرة */
            right: 50%;
            transform: translateX(50%) translateY(-6px);
            opacity: 0; /* مخفي افتراضيًا */
            pointer-events: none;
            /* انتقال لطيف عند الظهور */
            transition: opacity 0.15s ease-out, transform 0.15s ease-out;
        }

        /* عند المرور بالماوس: أظهر التلميح */
        .show-file-hover:hover::after {
            opacity: 1;
            transform: translateX(50%) translateY(-10px); /* يرتفع قليلًا */
        }
