@model Store_Sys.Models.ViewModels.InMaterialsViewModel

<div id="personal-info" class="shadow mt-3">
    <span class="bg-color"> إضافة مدخلات </span>
    <form asp-controller="InMaterials" asp-action="Create" method="post">
        <div class="row">
            <!-- اسم المادة -->
            <div class="col-sm-12 col-md-4 mt-3">
                <label>اسم المادة</label>
                <select asp-for="InMaterial.MaterialCode" asp-items="ViewBag.MaterialsList" class="form-control">
                    <option value="0">اختر اسم المادة</option> <!-- قيمة غير صالحة للتحقق -->
                </select>
                <span asp-validation-for="InMaterial.MaterialCode" class="text-danger"></span>
            </div>

            <!-- العدد -->
            <div class="col-sm-12 col-md-4 mt-3">
                <label>العدد</label>
                <input asp-for="InMaterial.Quantity" class="form-control" placeholder="العدد" required />
                <span asp-validation-for="InMaterial.Quantity" class="text-danger"></span> <!-- عرض رسالة الخطأ -->
            </div>

            <!-- مصدر المادة -->
            <div class="col-sm-12 col-md-4 mt-3">
                <label>مصدر المادة</label>
                <input asp-for="InMaterial.Source" class="form-control" placeholder="اسم مصدر" required />
                <span asp-validation-for="InMaterial.Source" class="text-danger"></span> <!-- عرض رسالة الخطأ -->
            </div>

            <!-- رقم المستند -->
            <div class="col-sm-12 col-md-4 mt-3">
                <label>رقم المستند</label>
                <input asp-for="InMaterial.DocumentNumber" class="form-control" placeholder="رقم المستند" required />
                <span asp-validation-for="InMaterial.DocumentNumber" class="text-danger"></span> <!-- عرض رسالة الخطأ -->
            </div>

            <!-- تاريخ الإدخال -->
            <div class="col-sm-12 col-md-4 mt-3">
                <label>تاريخ الإدخال</label>
                <input asp-for="InMaterial.EntryDate" type="date" class="form-control" required />
                <span asp-validation-for="InMaterial.EntryDate" class="text-danger"></span> <!-- عرض رسالة الخطأ -->
            </div>

            <!-- الجهة المحجوزة لها -->
            <div class="col-sm-12 col-md-4 mt-3">
                <label>اسم الجهة المحجوزة لها</label>
                <input asp-for="InMaterial.ReservedFor" class="form-control" placeholder="اسم الجهة" required />
                <span asp-validation-for="InMaterial.ReservedFor" class="text-danger"></span> <!-- عرض رسالة الخطأ -->
            </div>

            <!-- سنة التجهيز -->
            <div class="col-sm-12 col-md-4 mt-3">
                <label>سنة التجهيز</label>
                <select asp-for="InMaterial.YearDateId" asp-items="ViewBag.YearsList" class="form-control">
                    <option value="0" selected disabled>اختر السنة</option>
                </select>
                <span asp-validation-for="InMaterial.YearDateId" class="text-danger"></span>
            </div>
        </div>

        <div class="col-sm-12 mt-3">
            <input type="submit" class="form-control color-btn" value="حفظ" />
        </div>
    </form>

</div>
