@model Store_Sys.Models.ViewModels.InMaterialsViewModel

@{
    ViewData["Title"] = "تعديل مدخلات";
}

<form asp-action="Edit" method="post">
    <!-- مهم جدًا إرسال الـ Id عشان نعرف السجل اللي هنعدله -->
    <input type="hidden" asp-for="InMaterial.Id" />

    <div id="personal-info" class="shadow mt-3">
        <span class="bg-color"> تعديل مدخلات </span>
        <div class="row">
            <!-- اسم المادة -->
            <div class="col-sm-12 col-md-4 mt-3">
                <label asp-for="InMaterial.MaterialCode">اسم المادة</label>
                <select asp-for="InMaterial.MaterialCode" class="form-control" asp-items="ViewBag.MaterialsList">
                    <option selected disabled>اختر اسم المادة</option>
                </select>
            </div>

            <!-- العدد -->
            <div class="col-sm-12 col-md-4 mt-3">
                <label asp-for="InMaterial.Quantity">العدد</label>
                <input asp-for="InMaterial.Quantity" class="form-control" placeholder="العدد" />
            </div>

            <!-- مصدر المادة -->
            <div class="col-sm-12 col-md-4 mt-3">
                <label asp-for="InMaterial.Source">مصدر المادة</label>
                <input asp-for="InMaterial.Source" class="form-control" placeholder="اسم مصدر" />
            </div>
            <!-- الثمن -->
            <div class="col-sm-12 col-md-4 mt-3">
                <label class="form-label">الثمن</label>
                <input type="text" class="form-control" placeholder="" required>
                <div class="invalid-feedback">يُرجى إدخال الثمن.</div>
            </div>

            <!-- الوحدة -->
            <div class="col-sm-12 col-md-4 mt-3">
                <label class="form-label">الوحدة</label>
                <select class="form-select" required>
                    <option value="" selected disabled>اختر الوحدة</option>
                    <option value="kg">كيلوجرام</option>
                    <option value="l">لتر</option>
                    <option value="pc">قطعة</option>
                    <!-- أضف وحدات أخرى حسب الحاجة -->
                </select>
                <div class="invalid-feedback">يُرجى اختيار الوحدة.</div>
            </div>

            <!-- السعر -->
            <div class="col-sm-12 col-md-4 mt-3">
                <label class="form-label">السعر</label>
                <input type="text" class="form-control" placeholder=" " required>
                <div class="invalid-feedback">يُرجى إدخال السعر.</div>
            </div>
            <!-- رقم المستند -->
            <div class="col-sm-12 col-md-4 mt-3">
                <label asp-for="InMaterial.DocumentNumber">رقم المستند</label>
                <input asp-for="InMaterial.DocumentNumber" class="form-control" placeholder="رقم المستند" />
            </div>

            <!-- تاريخ الإدخال -->
            <div class="col-sm-12 col-md-4 mt-3">
                <label asp-for="InMaterial.EntryDate">تاريخ الإدخال</label>
                <input asp-for="InMaterial.EntryDate" type="date" class="form-control" />
            </div>

            <!-- اسم الجهة المجهزة لها -->
            <div class="col-sm-12 col-md-4 mt-3">
                <label asp-for="InMaterial.ReservedFor">اسم الجهة المجهزة لها</label>
                <input asp-for="InMaterial.ReservedFor" class="form-control" placeholder="اسم الجهة" />
            </div>

            <!-- سنة التجهيز -->
            <div class="col-sm-12 col-md-4 mt-3">
                <label asp-for="InMaterial.YearDateId">سنة التجهيز</label>
                <select asp-for="InMaterial.YearDateId" class="form-control" asp-items="ViewBag.YearsList">
                    <option selected disabled>اختر السنة</option>
                </select>
            </div>
        </div>
        <!-- التفاصيل -->
        <div class="col-12">
            <label class="form-label">التفاصيل</label>
            <textarea class="form-control" rows="3" placeholder="أضف أي ملاحظات إضافية"></textarea>
        </div>
        <div class="col-sm-12 mt-3">
            <input type="submit" class="form-control color-btn" value="حفظ" />
        </div>
    </div>
</form>
